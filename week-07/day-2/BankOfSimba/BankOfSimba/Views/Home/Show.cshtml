@model List<BankAccount>
@{
    int accountIndex = 0;
    }
@{
    ViewData["Title"] = "Show";
}

    <table>
        <thead>
            <tr>
                <th>Account Holder</th>
                <th>Balance</th>
                <th>Animal Type</th>
                <th>Index Position</th>
                <th>Is King?</th>
                <th>Good or Bad?</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in @Model)
            {
            <tr @if (account.IsKing) { <text>class="isKing"</text> } >
                <td>@account.Name</td>
                <td>@(Math.Round(account.Balance, 2)) Twigs</td>
                <td>@account.AnimalType</td>
                <td>@(accountIndex++)</td>
                <td>@(account.IsKing ? "Yes" : "No")</td>
                <td>@switch (account.AnimalType)
                {
                    case "Hyena":
                        <text>Bad one</text>
                        break;
                    case "Lion":
                        <text>Good one</text>
                        break;
                    default:
                        <text>Good one</text>
                        break;
                }</td>
            </tr>
            }
        </tbody>
    </table>

