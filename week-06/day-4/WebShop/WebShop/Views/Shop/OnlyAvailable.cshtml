@model List<ShopItem>

@{
    ViewData["Title"] = "MyShop";
}

<body>
    <div class ='container'>
        <header>
            <h1>My Shop</h1>
        </header>
        <nav>
            <button type="button">ONLY AVAILABLE</button>
            <button type="button">CHEAPEST FIRST</button>
            <button type="button">CONTAINS NIKE</button>
            <button type="button">AVERAGE STOCK</button>
            <button type="button">MOST EXPENSIVE AVAILABLE</button>
        </nav>
        <section>x
            <form action="" method="POST">
                <label for="search">Search for:</label>
                <input id="search" name="search" type="text" placeholder="Type here ...">
                <button type="submit">SEARCH</button>
            </form>
        </section>
        <section>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Quantity of stock</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Price</td>
                            <td>@item.QuantityOfStock</td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</body>
